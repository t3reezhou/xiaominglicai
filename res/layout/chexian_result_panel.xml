<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10_dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bj_car_js_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_4_dip"
        android:paddingRight="@dimen/dimen_4_dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_44_dip" >

            <Button
                android:id="@id/top_back"
                android:layout_width="@dimen/dimen_28_dip"
                android:layout_height="@dimen/dimen_21_dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:background="@drawable/bj_back_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="车险计算"
                android:textColor="#fffb8c04"
                android:textSize="@dimen/dimen_20_dip"
                android:textStyle="bold" />

            <Button
                android:id="@id/chexian_result_prize_btn"
                android:layout_width="@dimen/dimen_72_dip"
                android:layout_height="@dimen/dimen_27_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:background="@drawable/bj_prize_btn" />
        </RelativeLayout>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_36_dip"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@id/chexian_result_radio1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:background="@null"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="热门型"
                android:textColor="@color/btn_chexian_radio"
                android:textSize="@dimen/dimen_16_dip" />

            <RadioButton
                android:id="@id/chexian_result_radio2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:background="@null"
                android:button="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="基本型"
                android:textColor="@color/btn_chexian_radio"
                android:textSize="@dimen/dimen_16_dip" />

            <RadioButton
                android:id="@id/chexian_result_radio3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:background="@null"
                android:button="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="全面型"
                android:textColor="@color/btn_chexian_radio"
                android:textSize="@dimen/dimen_16_dip" />
        </RadioGroup>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_4_dip" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ff828282" />

            <View
                android:id="@id/chexian_slider_view"
                android:layout_width="@dimen/dimen_100_dip"
                android:layout_height="fill_parent"
                android:background="#fffb8c04" />
        </FrameLayout>

        <LinearLayout
            android:id="@id/main_panel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_10_dip" />
    </LinearLayout>

</LinearLayout>