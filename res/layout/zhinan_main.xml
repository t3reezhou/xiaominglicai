                    <RadioButton android:textColor="#ff373737" android:gravity="top|center" android:id="@id/chexian_radio_5" android:background="@drawable/zhinan_topbar" android:paddingTop="@dimen/zhinan_radio_padding" android:layout_width="wrap_content" android:layout_height="fill_parent" android:button="@null" />
                </RadioGroup>
            </LinearLayout>
        </HorizontalScrollView>
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
            <ImageView android:id="@id/zhinan_left_arrow" android:visibility="gone" android:layout_width="@dimen/dimen_20_dip" android:layout_height="@dimen/dimen_30_dip" android:src="@drawable/left_arrow" android:scaleType="fitCenter" android:layout_alignParentLeft="true" android:layout_centerInParent="true" />
