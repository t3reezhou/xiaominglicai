<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/alertdlg_content_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_46_dip"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_15_dip" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="fuck"
            android:src="@drawable/ic_dialog_menu_generic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:text="消息"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dimen_18_dip"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_30_dip"
        android:paddingLeft="@dimen/dimen_20_dip"
        android:paddingRight="@dimen/dimen_20_dip"
        android:paddingTop="@dimen/dimen_20_dip" >

        <TextView
            android:id="@id/dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入以下验证码内容"
            android:textColor="#ff000000"
            android:textSize="@dimen/dimen_16_dip" />

        <LinearLayout
            android:id="@id/dialog_refresh_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10_dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@id/dialog_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="fuck"
                android:src="@drawable/jcaptcha" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:text="点击刷新"
                android:textColor="#ff000000"
                android:textSize="@dimen/dimen_14_dip" />
        </LinearLayout>

        <EditText
            android:id="@id/dialog_edit_text"
            android:layout_width="@dimen/dimen_260_dip"
            android:layout_height="@dimen/dimen_40_dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:background="@drawable/map_dd_bg"
            android:inputType="text"
            android:padding="@dimen/dimen_8_dip"
            android:textColor="#ff545454"
            android:textSize="@dimen/dimen_18_dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30_dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@id/dialog_btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/alertdlg_btn"
                android:paddingLeft="@dimen/dimen_30_dip"
                android:paddingRight="@dimen/dimen_30_dip"
                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="@dimen/dimen_14_dip" />

            <Button
                android:id="@id/dialog_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:background="@drawable/alertdlg_btn"
                android:paddingLeft="@dimen/dimen_30_dip"
                android:paddingRight="@dimen/dimen_30_dip"
                android:text="取消"
                android:textColor="#ffffffff"
                android:textSize="@dimen/dimen_14_dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>